<?xml version="1.0" encoding="UTF-8"?>
<extension type="module" version="4.0" method="upgrade">
    <name>mod_customadminmodule</name>
    <description>A custom administrator module for Joomla</description>
    <files>
        <filename module="mod_customadminmodule">mod_customadminmodule.php</filename>
        <filename>helper.php</filename>
        <folder>tmpl</folder>
    </files>
</extension>
<?xml version="1.0" encoding="UTF-8"?>
<extension type="module" version="4.0" client="site" method="upgrade">
    <name>MOD_CUSTOMSLIDER</name>
    <description>Custom Slider Module</description>
    <files>
        <filename module="mod_customslider">mod_customslider.php</filename>
        <filename>helper.php</filename>
        <folder>tmpl</folder>
    </files>
    <languages>
        <language tag="en-GB">language/en-GB/en-GB.mod_customslider.ini</language>
    </languages>
</extension>
